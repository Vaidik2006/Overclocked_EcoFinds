<% layout('layouts/boilerplate') %>
<div class="signup-container">
  <h2>Sign up</h2>

  <div class="logo-placeholder">
    <p>[LOGO]</p>
  </div>

  <form action="/users" method="POST" class="signup-form" novalidate>
    <!-- Display Name -->
    <div class="form-group">
      <label for="name">Display Name:</label>
      <input type="text" id="name" name="user[username]" required>
    </div>

    <!-- Email -->
    <div class="form-group">
      <label for="email">Email address:</label>
      <input type="email" id="email" name="user[email]" required>
    </div>

    <!-- Password -->
    <div class="form-group">
      <label for="password">Password:</label>
      <input type="password" id="password" name="user[password]" required>
    </div>

    <!-- Confirm Password -->
    <div class="form-group">
      <label for="confirmPassword">Confirm Password:</label>
      <input type="password" id="confirmPassword" name="confirmPassword" required>
    </div>

    <!-- Submit -->
    <div class="form-group">
      <button type="submit">Sign up</button>
    </div>
  </form>

  <p>Already have an account? <a href="/auth/login">Login</a></p>
</div>
