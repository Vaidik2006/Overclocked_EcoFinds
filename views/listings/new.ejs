<% layout('layouts/boilerplate') %>

<div style="max-width: 700px; margin: 20px auto; font-family: Arial, sans-serif;">
  <a href="/listings" style="text-decoration: none; margin-bottom: 10px; display: inline-block;">← Back</a>

  <h1>Add New Listing</h1>

  <form method="POST" action="/listings" style="display: flex; flex-direction: column; gap: 12px;" novalidate class="needs-validation">

    <!-- Title -->
    <label for="title">Title:</label>
    <input type="text" id="title" name="listing[title]" required>

    <!-- Category -->
    <label for="category">Category:</label>
    <select id="category" name="listing[category]" required>
      <option value="">-- Select Category --</option>
      <option value="Electronics">Electronics</option>
      <option value="Clothing">Clothing</option>
      <option value="Home Appliances">Home Appliances</option>
      <option value="Books">Books</option>
      <option value="Others">Others</option>
    </select>

    <!-- Images -->
    <label for="images">Image URLs (comma separated):</label>
    <input type="text" id="images" name="listing[images]" placeholder="e.g. /images/item1.jpg, /images/item2.jpg">

    <!-- Description -->
    <label for="description">Description:</label>
    <textarea id="description" name="listing[description]" rows="4" required></textarea>

    <!-- Price -->
    <label for="price">Price (₹):</label>
    <input type="number" id="price" name="listing[price]" min="0" step="0.01" required>

    <!-- Quantity -->
    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" name="listing[quantity]" min="1" value="1">

    <!-- Condition -->
    <label for="condition">Condition:</label>
    <select id="condition" name="listing[condition]">
      <option value="Used">Used</option>
      <option value="New">New</option>
      <option value="Refurbished">Refurbished</option>
    </select>

    <!-- Year of Manufacture -->
    <label for="year_of_manufacture">Year of Manufacture:</label>
    <input type="number" id="year_of_manufacture" name="listing[year_of_manufacture]" min="1900" max="2099">

    <!-- Brand -->
    <label for="brand">Brand:</label>
    <input type="text" id="brand" name="listing[brand]">

    <!-- Model -->
    <label for="model">Model:</label>
    <input type="text" id="model" name="listing[model]">

    <!-- Dimensions -->
    <fieldset style="border: 1px solid #ccc; padding: 10px;">
      <legend>Dimensions</legend>
      <input type="number" name="listing[dimensions][length]" placeholder="Length (cm)">
      <input type="number" name="listing[dimensions][width]" placeholder="Width (cm)">
      <input type="number" name="listing[dimensions][height]" placeholder="Height (cm)">
      <input type="number" name="listing[dimensions][diameter]" placeholder="Diameter (cm)">
      <input type="number" name="listing[dimensions][waist]" placeholder="Waist (cm)">
      <input type="number" name="listing[dimensions][inseam]" placeholder="Inseam (cm)">
    </fieldset>

    <!-- Weight -->
    <label for="weight">Weight (kg):</label>
    <input type="number" id="weight" name="listing[weight]" step="0.01">

    <!-- Material -->
    <label for="material">Material:</label>
    <input type="text" id="material" name="listing[material]">

    <!-- Color -->
    <label for="color">Color:</label>
    <input type="text" id="color" name="listing[color]">

    <!-- Checkboxes -->
    <label>
      <input type="checkbox" name="listing[original_packaging]" value="true">
      Original Packaging Included
    </label>

    <label>
      <input type="checkbox" name="listing[manual_included]" value="true">
      Manual Included
    </label>

    <!-- Working Condition -->
    <label for="working_condition">Working Condition:</label>
    <input type="text" id="working_condition" name="listing[working_condition]" placeholder="e.g. Fully functional">

    <!-- Submit -->
    <button type="submit" style="margin-top: 15px; padding: 10px; background-color: #8000ff9c; color: white; border: none; cursor: pointer;">
      Submit Listing
    </button>
  </form>
</div>
